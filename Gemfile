  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development do
  gem 'quiet_assets'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'jasmine'
  gem 'faker'
  gem 'shoulda-matchers'
end

group :test do
  gem 'spork'
  gem 'guard-rspec'
  gem 'guard-spork'
end
